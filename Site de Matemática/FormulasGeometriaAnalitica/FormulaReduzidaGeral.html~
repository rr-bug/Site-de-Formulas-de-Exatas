			Equação Reduzida e Geral
	</title>

	<script type='text/javascript'>
			function showHideDiv(elem){

				var dr = document.getElementById("cReduzida");
				var dg = document.getElementById("cGeral");
				if (elem.value == "dr"){
					dr.style.display = "block";
					dg.style.display = "none";					
				} else if (elem.value == "dg"){
					dr.style.display = "none";
					dg.style.display = "block";		
				}
				
			}	
			
			function calcularQuarto(tipo, var1, var2, var3, var4){
				var resultado = document.getElementById('result');
				var r, r1,r2;
				if (tipo == 1){
					r1 = Math.pow((var2.value - var1.value),2);
					r2 = Math.pow((var4.value - var3.value),2);
					r = Math.sqrt(r1 + r2);
					resultado.innerHTML =  "Fórmula = √(x - a)² + (y - b)²  "+ "<br> √ (" + var2.value + "-" + var1.value + "² )+( " + var4.value + "-" + var3.value + ")²" + "<br>" + "Reduzida = " + r + " ";
				} 
			}

			function calcularTres(tipo, var1, var2, var3){
				var resultado = document.getElementById('result');
				var r, r1;
				if (tipo == 2){
					r = Math.pow(var1.value,2) + Math.pow(var2.value,2) + Math.pow(var3.value,2);					
					r1 = Math.sqrt(r);
					resultado.innerHTML =  "Fórmula = √ (a² + b² + y²)  "+ "<br> √" + var1.value + "² + " + var2.value + "² + " + var3.value + "² " +  "<br>" + "Geral = " + r1;
				} 
			}
			
			function limparQuatro(var1, var2, var3, var4){
				document.getElementById(var1).value="";
				document.getElementById(var2).value="";
				document.getElementById(var3).value="";
				document.getElementById(var4).value="";
				document.getElementById('result').innerHTML ="";
			}
			function limparTres(var1, var2, vel3){
				document.getElementById(var1).value="";
				document.getElementById(var2).value="";				
				document.getElementById(var3).value="";				
				document.getElementById('result').innerHTML ="";
			}
			
	</script>
