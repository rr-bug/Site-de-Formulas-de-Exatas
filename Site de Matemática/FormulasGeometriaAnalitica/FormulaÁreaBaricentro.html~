	<script type='text/javascript'>
			function showHideDiv(elem){

				var dx = document.getElementById("cBaricentroX");
				var dy = document.getElementById("cBaricentroY");
				var da = document.getElementById("cÁrea");
				if (elem.value == "dx"){
					dx.style.display = "block";
					dy.style.display = "none";			
					da.style.display = "none";			
				}else if (elem.value == "dy"){
					dx.style.display = "none";			
					dy.style.display = "block";
					da.style.display = "none";			
				}else if (elem.value == "da"){
					dx.style.display = "none";
					dy.style.display = "none";			
					da.style.display = "block";					
				}
				
			}	
			
			function calcularTres(tipo, var1, var2, var3){
				var resultado = document.getElementById('result');
				var r;
				if (tipo == 1){					
					r = (parseInt(var1.value) + parseInt(var2.value) + parseInt(var3.value)) / 3;
					resultado.innerHTML =  "Fórmula = Xa + Xb + Xc / 3  "+ "<br> " + var1.value + " + " + var2.value + " + " + var3.value + " / 3" + "<br>" + "Baricentro X = " + r + " ";
				} else if (tipo == 2){
					r = (parseInt(var1.value) + parseInt(var2.value) + parseInt(var3.value)) / 3;
					resultado.innerHTML =  "Fórmula = Ya + Yb + Yc / 3  "+ "<br> " + var1.value + " + " + var2.value + " +  " + var3.value + " / 3" + "<br>" + "Baricentro Y = " + r + " ";				
				} 
			}			
			
			function calcular(tipo, var1){
				var resultado = document.getElementById('result');
				var r;
				if (tipo == 3){
					r = var1.value / 2;
					resultado.innerHTML =  "Formula = | D | / 2;  "+ "<br> |" + var1.value + "| / 2" + "<br>" + "Área do Triângulo = " + r + " m²";
				} 
			}
			
			function limparTres(var1, var2, var3, var4){
				document.getElementById(var1).value="";
				document.getElementById(var2).value="";
				document.getElementById(var3).value="";
				document.getElementById(var4).value="";
				document.getElementById('result').innerHTML ="";
			}
			function limpar(var1){
				document.getElementById(var1).value="";
				document.getElementById('result').innerHTML ="";
			}
			
	</script>
