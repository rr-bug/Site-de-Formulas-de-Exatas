	<script type='text/javascript'>
			function showHideDiv(elem){

				var dal = document.getElementById("cÁreaLateral");
				var dat = document.getElementById("cÁreaTotal");
				var dv = document.getElementById("cVolume");
				if (elem.value == "dal"){
					dal.style.display = "block";
					dat.style.display = "none";
					dv.style.display = "none";					
				} else if (elem.value == "dat"){
					dal.style.display = "none";
					dat.style.display = "block";			
					dv.style.display = "none";			
				}else if (elem.value == "dv"){
					dal.style.display = "none";
					dat.style.display = "none";			
					dv.style.display = "block";					
				}				
			}	
			
			function calcular(tipo, var1, var2, var3){
				var resultado = document.getElementById('result');
				var r;
				if (tipo == 1){
					r = Math.PI * var1.value *(var2.value + var3.value);
					resultado.innerHTML =  "Fórmula = 3,14 * g (R + r); "+"<br>3,14 *" + var1.value +"* (" +var2.value + "+" +var3.value+");  "+ "<br>" + "Área Lateral = " + r + " m²";
				} else if (tipo == 2){
					r = parseInt(var1.value) + parseInt(var2.value)+parseInt(var3.value);
					resultado.innerHTML =  "Fórmula = Al + Ab + Abm;  "+ "<br>" + var1.value + " + " +var2.value +" + " + var3.value + "<br>" + "Área Total = " + r + " m²";					 
				} else if (tipo == 3){
					r = ((Math.PI * var1.value) / 3) * ((Math.pow(var2.value,2)) + ((var2.value*var3.value)) + (Math.pow(var3.value,2)));					
					resultado.innerHTML = "Fórmula = 3,14 * h / 2 * (R² + (R*r) + r²) " + "<br> 3,14 * "+  var1.value + " / 2 * (" + var2.value + "² + (" + var2.value + "*" + var3.value+") + "+var3.value+"²)"+"<br>" + "Volume = " + r + " L";					 					 
				} 
			}

			function limpar(var1, var2, var3){
				document.getElementById(var1).value="";
				document.getElementById(var2).value="";
				document.getElementById(var3).value="";
				document.getElementById('result').innerHTML ="";
			}
			
	</script>
