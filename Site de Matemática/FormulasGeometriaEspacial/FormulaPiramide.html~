	<script type='text/javascript'>
			function showHideDiv(elem){

				var dl = document.getElementById("cÁreaLateral");
				var dt = document.getElementById("cÁreaTotal");
				var dv = document.getElementById("cVolume");
				if (elem.value == "dl"){
					dl.style.display = "block";
					dt.style.display = "none";
					dv.style.display = "none";					
				} else if (elem.value == "dt"){
					dl.style.display = "none";
					dt.style.display = "block";
					dv.style.display = "none";			
				}else if (elem.value == "dv"){
					dl.style.display = "none";
					dt.style.display = "none";			
					dv.style.display = "block";					
				}				
			}	
			
			function calcular(tipo, var1, var2){
				var resultado = document.getElementById('result');
				var r,r1;
				if (tipo == 1){
					r = var1.value * var2.value;
					resultado.innerHTML =  "Fórmula = n * At  "+ "<br>" + var1.value + " * " + var2.value + "<br>" + "Área Lateral = " + r + " m²";
				} else if (tipo == 2){
					r = parseInt(var1.value) + parseInt(var2.value);
					resultado.innerHTML =  "Fórmula = Ab + Al  "+ "<br>" + var1.value + " + " + var2.value + "<br>" + "Área Total = " + r + " m²";					 
				} else if (tipo == 3){
					r1 = (var1.value * var2.value)
					r = r1/ 3;
					resultado.innerHTML = "Fórmula = Ab * h / 3 "+ "<br> "+  var1.value + " * " + var2.value + "/ 3 <br>" + "Volume = " + r + " L";					 					 
				} 
			}

			function limpar(var1, var2){
				var1.value="";
				var2.value="";
				document.getElementById('result').innerHTML ="";
			}
			
	</script>
