	<script type='text/javascript'>
			function showHideDiv(elem){

				var dal = document.getElementById("cApótemaLateral");
				var db = document.getElementById("cÁreaBase");
				var da = document.getElementById("cÁreaTotal");
				var dv = document.getElementById("cVolume");
				if (elem.value == "dal"){
					dal.style.display = "block";
					db.style.display = "none";
					da.style.display = "none";
					dv.style.display = "none";					
				} else if (elem.value == "db"){
					dal.style.display = "none";
					db.style.display = "block";
					da.style.display = "none";			
					dv.style.display = "none";			
				}else if (elem.value == "da"){
					dal.style.display = "none";
					db.style.display = "none";			
					da.style.display = "block";
					dv.style.display = "none";			
				}else if (elem.value == "dv"){
					dal.style.display = "none";
					db.style.display = "none";
					da.style.display = "none";			
					dv.style.display = "block";					
				}
				
			}	
			
			function calcular(tipo, var1){
				var resultado = document.getElementById('result');
				var r;
				if (tipo == 1){
					r = (var1.value * (Math.sqrt(2))) / 2;
					resultado.innerHTML =  "Formula = a*√2 / 2;  "+ "<br>" + var1.value + " * √ 2 / 2" + "<br>" + "Apótema Lateral = " + r + " ";
				} else if (tipo == 2){
					r = (var1.value * (Math.sqrt(3))) / 4;
					resultado.innerHTML =  "Formula = a*√3 / 4;  "+ "<br>" + var1.value + " * √3 / 4" + "<br>" + "Área Base = " + r + " m²";					 
				} else if (tipo == 3){
					r = Math.pow(var1.value,2) * (Math.sqrt(3));					
					resultado.innerHTML = "Formula = a * √3 "+ "<br> "+  var1.value + "² * √3" + "<br>" + "Área Total= " + r + " m²";					 					 
				} else if (tipo == 4){
					r = Math.pow(var1.value,2) * (Math.sqrt(2)) / 12;					
					resultado.innerHTML = "Formula = a² * √2 / 12"+ "<br> "+  var1.value + "² * √2 / 12" + "<br>" + "Volume = " + r + " L";					 					  
				} 
			}

			function limpar(var1){
				document.getElementById(var1).value="";
				document.getElementById('result').innerHTML ="";
			}
			
	</script>
